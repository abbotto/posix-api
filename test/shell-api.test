#!/usr/bin/env sh

EXIT_CODE=0
PASS_COUNT=0
FAIL_COUNT=0

mkdir -p ./tmp

capture_exit_code(){
    if [ "${?}" = 0 ]; then
        PASS_COUNT=$((PASS_COUNT+1))

    else
        FAIL_COUNT=$((FAIL_COUNT+1))

    fi

    EXIT_CODE="$((EXIT_CODE + ${?}))"
}

# Generate a temporary 'env' file
echo 'HELLO="WORLD"' | tee ./tmp/.env.test >/dev/null 2>&1

# Generate a temporary 'daemon' script
echo '#!/usr/bin/env sh' | tee ./tmp/daemon_test >/dev/null 2>&1
echo 'ping -c 255 127.0.0.1' | tee -a ./tmp/daemon_test >/dev/null 2>&1
chmod +x ./tmp/daemon_test

# Functions
./test/confirm.test
capture_exit_code

./test/import.test
capture_exit_code

./test/join-file.test
capture_exit_code

./test/pipe-file.test
capture_exit_code

./test/print-text.test
capture_exit_code

./test/read-file.test
capture_exit_code

./test/require.test
capture_exit_code

./test/start-daemon.test
capture_exit_code

./test/watch-daemon.test
capture_exit_code

./test/stop-daemon.test
capture_exit_code

./test/write-file.test
capture_exit_code

echo ""
echo "---------------------"
echo "${PASS_COUNT} passed, ${FAIL_COUNT} failed"
echo "---------------------"

rm -rf ./tmp

if [ "${EXIT_CODE}" != 0 ]; then
    exit 1

fi

exit 0
