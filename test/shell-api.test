#!/usr/bin/env sh

. ./shell/strict-mode

exit_code=0
pass_count=0
fail_count=0

mkdir -p ./tmp

capture_exit_code(){
    if [ "${?}" = 0 ]; then
        pass_count=$((pass_count+1))
    else
        fail_count=$((fail_count+1))
    fi

    exit_code="$((exit_code + ${?}))"
}

# Generate a temporary 'env' file
echo 'HELLO="WORLD"' | tee ./tmp/.env.test >/dev/null 2>&1

# Generate a temporary 'daemon' script
echo "#!/usr/bin/env ${SHELL_API_ENV}" | tee ./tmp/daemon_test >/dev/null 2>&1
echo 'ping -c 255 127.0.0.1' | tee -a ./tmp/daemon_test >/dev/null 2>&1
chmod +x ./tmp/daemon_test

# Functions
./test/confirm.test
capture_exit_code

./test/export-file.test
capture_exit_code

./test/join-file.test
capture_exit_code

./test/pipe-file.test
capture_exit_code

./test/print-text.test
capture_exit_code

./test/read-file.test
capture_exit_code

./test/require.test
capture_exit_code

./test/start-daemon.test
capture_exit_code

./test/watch-daemon.test
capture_exit_code

./test/stop-daemon.test
capture_exit_code

./test/write-file.test
capture_exit_code

echo ""
echo "------------------------"
echo "${SHELL_API_ENV}: ${pass_count} passed, ${fail_count} failed"
echo "------------------------"

rm -rf ./tmp

if [ "${exit_code}" != 0 ]; then
    exit 1
fi
