#!/usr/bin/env sh

. shell/print-text
. shell/terminate
. shell/require

echo ""
print-text 12 "Checking if the 'require' function works..."
echo ""

mkdir -p ./tmp
printf '#!/usr/bin/env sh\n\necho "HELLO WORLD"' | tee ./tmp/require >/dev/null 2>&1
chmod +x ./tmp/require

require ./tmp/require

terminate "${?}" "PASS" "FAIL"
