#!/usr/bin/env sh

. "${SHELL_API_PATH}"/print-text
. "${SHELL_API_PATH}"/terminate
. "${SHELL_API_PATH}"/require

echo ""
print-text 12 "Checking if the 'require' function works..."

mkdir -p ./tmp
printf '#!/usr/bin/env sh\n\necho "HELLO WORLD"' | tee ./tmp/require >/dev/null 2>&1
chmod +x ./tmp/require

require ./tmp/require

terminate "${?}" "PASS" "FAIL"
