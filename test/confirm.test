#!/usr/bin/env sh

. shell/print-text

echo ""
print-text 12 "Checking if the 'confirm' function fails properly..."
echo ""

. shell/terminate
. shell/confirm

confirm >/dev/null 2>&1

EXIT_CODE="${?}"

echo "EXIT CODE: ${EXIT_CODE}"

if [ "${EXIT_CODE}" = 127 ]; then
    EXIT_CODE=0

fi

terminate "${EXIT_CODE}" "PASS" "FAIL"
