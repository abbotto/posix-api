#!/usr/bin/env sh

. shell/print-text
. shell/terminate
. shell/start-daemon

echo ""
print-text 12 "Checking if the 'start-daemon' function works..."

echo ""
start-daemon daemon_test ./tmp/daemon_test

exit_code="${?}"
pid=$(cat /tmp/shell-api/daemon_test.pid)

if [ -z "${pid}" ]; then
    exit_code=127
fi

terminate "${exit_code}" "PASS" "FAIL"
